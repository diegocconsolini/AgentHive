# Web Frontend Configuration
VITE_USER_API_URL=http://localhost:4000/graphql
VITE_SYSTEM_API_URL=http://localhost:4001/graphql
VITE_DOCS_URL=http://localhost:8080

# User API Configuration (Memory Management)
USER_API_PORT=4000
USER_API_DATABASE_URL=file:./data/user.db
USER_API_JWT_SECRET=dev-secret-key-change-in-production
USER_API_JWT_EXPIRES_IN=1h
USER_API_REFRESH_TOKEN_EXPIRES_IN=7d

# System API Configuration (Agent Management) 
SYSTEM_API_PORT=4001
SYSTEM_API_DATABASE_URL=file:./data/system.db
SYSTEM_API_STORAGE_PATH=./storage
SYSTEM_API_CACHE_SIZE=1000

# Inter-Service Communication
USER_TO_SYSTEM_API_URL=http://localhost:4001
SYSTEM_TO_USER_API_URL=http://localhost:4000

# Development Settings
NODE_ENV=development
LOG_LEVEL=debug
ENABLE_CORS=true
ENABLE_GRAPHQL_PLAYGROUND=true

# Docker Settings (for docker-compose)
COMPOSE_PROJECT_NAME=epic-memory-manager