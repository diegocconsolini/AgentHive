# Epic Memory Manager Environment Configuration
# Copy this file to .env and configure with your values

# JWT Configuration (REQUIRED in production)
JWT_SECRET=your-secure-random-jwt-secret-key-here
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# Database Configuration
DATABASE_URL=file:./memory_manager.db

# Server Configuration
PORT=4000
NODE_ENV=development

# Development Seeding (Development only)
SEED_PASSWORD=secure-dev-password
SEED_USER_EMAIL=dev@localhost
SEED_ADMIN_EMAIL=admin@localhost

# API Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
API_RATE_LIMIT=1000

# Logging
LOG_LEVEL=info

# Security Headers
HELMET_ENABLED=true
RATE_LIMITING_ENABLED=true

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=false
ENABLE_EMAIL_VERIFICATION=false